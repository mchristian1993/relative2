<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.aula_7.relative2.MainActivity">


    <TextView
    android:id="@+id/txtcenter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/st4"
    android:background="@color/colorAccent"
    android:padding="10dp"
    android:layout_centerInParent="true"
        android:layout_margin="4dp"
    />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/st1"
        android:background="@color/colorAccent"
        android:padding="10dp"
android:layout_alignLeft="@id/txtcenter"
     android:layout_above="@id/txtcenter"


        />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/st3"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_centerInParent="true"
android:layout_toLeftOf="@id/txtcenter"

        />


    <TextView
        android:id="@+id/txt3.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/st8"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/txtcenter"

        />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s9"
        android:background="@color/colorAccent"
        android:padding="10dp"
       android:layout_below="@id/txtcenter"
        android:layout_alignRight="@id/txtcenter"

        />
</RelativeLayout>
